@model Gestion_Convention_stage.Models.Student

@{
    ViewData["Title"] = "Sign Up";
}

<div class="">

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header text-center">Register</div>
                        <div class="card-body">
                          

                        @using (Html.BeginForm("saveStudent","Student",FormMethod.Post,new{@class="form-horizontal"}))
                         {
                          <h4>Account</h4>

                            <div class="form-group">
                                @Html.LabelFor(m=>m.apoge, new{@class="col-md-2 contorl-label"})
                                <div class="col-md-10">
                                   @Html.TextBoxFor(m=>m.apoge,new{@class="form-control"})
                                   @Html.ValidationMessageFor(m=>m.apoge)
                                </div>
                            </div >



                            <div class="form-group">
                                @Html.LabelFor(m=>m.f_name, new{@class="col-md-2 contorl-label"})
                                <div class="col-md-10">
                                   @Html.TextBoxFor(m=>m.f_name,new{@class="form-control"})
                                   @Html.ValidationMessageFor(m=>m.f_name)
                                </div>
                            </div >



                            <div class="form-group">
                                @Html.LabelFor(m=>m.l_name, new{@class="col-md-2 contorl-label"})
                                <div class="col-md-10">
                                   @Html.TextBoxFor(m=>m.l_name,new{@class="form-control"})
                                   @Html.ValidationMessageFor(m=>m.l_name)
                                </div>
                            </div >

                             <div class="form-group"> 
                                @Html.LabelFor(m=>m.email, new{@class="col-md-2 control-label"})
                                <div class="col-md-10">
                                   @Html.TextBoxFor(m=>m.email,new{@class="form-control"})
                                   @Html.ValidationMessageFor(m=>m.email)
                                </div>
                            </div >


                            <div class="form-group">
                                @Html.LabelFor(m=>m.password, new{@class="col-md-2 contorl-label"})
                                <div class="col-md-10">
                                   @Html.PasswordFor(m=>m.password,new{@class="form-control"})
                                   @Html.ValidationMessageFor(m=>m.password)
                                </div>
                            </div >


                            <div class="form-group">
                               <div class="col-md-10">
                               <select asp-for="major" class="form-control" > 
                                   <option value="GI" >Informatic</option>
                                   <option value="GM" >Mecatronic</option>
                                   <option value="GC">Civil</option>
                                   <option value="GSTR">Telecomunication</option>
                                   <option value="GSCM">Supply Chaine Management</option>
                               </select>
                               </div>
                            </div >

                            <div class="form-group" style="margin-top:15px;">
                                <button class="btn btn-primary"  type="submit"  >Register</button>
                                <button class="btn btn-link"  type="button"  ><a class="nav-link text-blue" asp-area="" asp-controller="Home" asp-action="Login">Login</a></button>

                            </div >

                         }

                        </div>
                    </div>
            </div>
        </div>
    </div>

</main>


</div>


<script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.min.js")" type="text/javascript"></script> 
<script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script> 
